{
    "compilerOptions": {
        "declaration": true,
        "importHelpers": true,
        "module": "commonjs",
        "outDir": "lib",
        "rootDir": "src",
        "strict": true,
        "target": "es2017",
        "lib": [
            "es2015"
        ],
        "baseUrl": "src",
        "allowSyntheticDefaultImports": true,
        "noEmit": true,
        "allowJs": true,
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}