{
    "extends": ["oclif", "oclif-typescript"],
    "globals": {
        "envVariables": true
    },
    "rules": {
        "@typescript-eslint/no-unused-vars": ["error", {"ignoreRestSiblings": true}],
        "semi": 0,
        "indent": 0,
        "comma-dangle": 0,
        "no-console": 0,
        "@typescript-eslint/no-inferrable-types": 0,
        "one-var": 0,
        "unicorn/no-hex-escape": 0
    },
    "overrides": [
        {
            "files": ["*.ts"],
            "rules": {
                "no-undef": "off"
            }
        }
    ]
}
